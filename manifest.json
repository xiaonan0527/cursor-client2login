{
  "manifest_version": 3,
  "name": "Cursor Client2Login",
  "version": "1.6.0",
  "description": "管理Cursor认证信息的Chrome插件",
  
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "nativeMessaging",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://www.cursor.com/*",
    "https://cursor.com/*",
    "https://*.cursor.com/*",
    "https://api2.cursor.sh/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cursor Client2Login"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.cursor.com/*"],
      "js": ["content.js"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["native_host.py", "install_guide.md", "main.html", "check_chrome_permissions.html", "get_extension_id.html"],
      "matches": ["<all_urls>"]
    }
  ]
} 